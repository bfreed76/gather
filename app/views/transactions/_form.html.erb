<%= gather_form_for([account, transaction], url: account_transactions_path(account)) do |f| %>
  <%= hidden_field_tag :account_id, account.id %>
  <%= f.input(:household_name) { transaction.household_name } %>
  <%= f.input :incurred_on, as: :date_picker %>
  <%= render("core_fields") %>

  <%= form_actions do %>
    <%= link_to("Cancel", accounts_path, class: "btn btn-default") %>
    <%= f.button :primary %>
  <% end %>
<% end %>

<%= javascript_tag do %>
  $(function() {
    new Gather.Views.DirtyChecker({el: '.billing--transaction-form'});
  });
<% end %>

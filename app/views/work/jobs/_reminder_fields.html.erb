<div class="field-row">
  <%= f.input(:abs_rel, collection: Work::JobReminder::ABS_REL_OPTIONS, include_blank: false) %>
  <%= f.input(:abs_time, as: :datetime_picker, required: true, stepping: 5) %>
  <%= f.input(:rel_magnitude, as: :numeric, required: true,
                              input_html: {value: f.object.decorate.rel_magnitude_to_i_or_f}) %>
  <%= f.input(:rel_unit_sign, collection: Work::JobReminder::REL_UNIT_SIGN_OPTIONS,
                              include_blank: false, label: false) %>
</div>
<div class="field-row">
  <%= f.input(:note) %>
</div>

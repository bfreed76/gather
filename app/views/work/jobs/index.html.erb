<% content_for(:title, "Jobs") %>
<% content_for(:top_buttons) do %>
  <% if policy(sample_job).create? && @period %>
    <%= link_to(icon_tag("plus") << " Create Job",
      new_work_job_path(period: @period.id), class: "btn btn-primary") %>
  <% end %>
<% end %>

<%= session[:lenses] %>

<% if @period.nil? %>
  <div class="none-found">
    <%= t("work.no_periods_html", link: link_to(t("work.create_one"), work_periods_path)) %>
  </div>
<% elsif jobs.empty? %>
  <div class="none-found">
    No jobs found. <%= lenses.no_result_clear_filter_link %>
  </div>
<% else %>
  <table class="index part-width">
    <thead>
      <tr>
        <th>Title</th>
        <th>Requester</th>
        <th>Hours</th>
        <th>Slots</th>
      </tr>
    </thead>
    <tbody>
      <% jobs.each do |job| %>
        <tr>
          <td class="title">
            <%= link_to(job.title, edit_work_job_path(job)) %>
            <%= job.slot_type_icon %>
          </td>
          <td class="requester"><%= job.requester_name %></td>
          <td class="hours"><%= job.hours %></td>
          <td class="slots"><%= job.slot_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

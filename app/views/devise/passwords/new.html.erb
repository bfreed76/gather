<% content_for(:title, "Forgot Password") %>

<%= gather_form_for(resource, layout: :vertical, width: :narrow, top_error_notification: false,
                              url: password_path(resource_name), html: {method: :post}) do |f| %>
  <p>
    Enter your email address to have instructions sent to you via email.
    Follow the instructions in the email to reset your password. The email may take a few
    moments to arrive.
  </p>

  <%= f.input(:email, required: false, autofocus: true, hint: false) %>

  <%= form_actions do %>
    <%= f.button(:primary, :send_reset_instructions) %>
  <% end %>
<% end %>

<% content_for(:title, "Invite Users to Sign In") %>

<% if @users.empty? %>

  There are no active users that have never signed in.

<% else %>

  The following users have never signed in. Check the ones you'd like to invite.

  <%= form_tag("/users/send-invites", method: :post) do %>
    <div id="invite-list">
      <% @users.each do |u| %>
        <div>
          <label>
            <input type="checkbox" name="to_invite[]" value="<%= u.id %>">
            <%= u.name %>
          </label>
        </div>
      <% end %>
    </div>

    <a href="#" class="btn btn-default"
      onclick="$('#invite-list input[type=checkbox]').prop('checked', true); return false;">
      Check All
    </a>
    <input type="submit" value="Send Invites" class="btn btn-primary">
  <% end %>

<% end %>

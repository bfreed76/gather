<tr>
  <th rowspan="2">Household</th>
  <% Meals::Signup::DINER_TYPES.each do |dt| %>
    <% if @meal.formula.allows_diner_type?(dt) %>
      <th class="diner-type" colspan="2"><%= t("signups.diner_types.#{dt}", count: 1) %></th>
    <% end %>
  <% end %>
  <% if extra_col %><th></th><% end %>
</tr>

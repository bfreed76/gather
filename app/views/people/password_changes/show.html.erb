<% content_for(:title, "Change Password") %>

<%= gather_form_for(current_user, top_error_notification: false,
                                  url: check_people_password_change_path) do |f| %>
  <%= f.input(:current_password, label: "Current Password", autofocus: true) %>

  <%= form_actions do %>
    <%= f.button(:primary, :continue) %>
  <% end %>
<% end %>

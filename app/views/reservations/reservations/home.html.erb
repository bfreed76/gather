<% content_for(:title, "Events") %>

<% content_for(:top_buttons) do %>
  <%= calendar_exports_link %>
<% end %>

<% if calendars.empty? %>
  <div class="center-notice">
    No reservable calendars found.
  </div>
<% else %>
  <% calendars.each do |calendar| %>
    <div class="calendar">
      <%= link_to(calendars_events_path(calendar_id: calendar.id)) do %>
        <%= image_tag(calendar.photo_variant(:thumb)) %>
        <%= calendar.name_with_inactive %>
      <% end %>
    </div>
  <% end %>
<% end %>
